{% extends "base.html.twig" %}



{% block main %}
    {% for picture in pictures %}
        <section id="all-pictures">
            <div class="admin-gallery">
                <img class="pictures-gallery" src="{{ asset('uploads/images/') ~ picture.picture }}" alt="Photo de tatouage">

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path ('admin_pictures_delete',{'id':picture.id }) }}">Supprimer cette photo</a>
                    <a href="{{ path ('admin_pictures') }}">Ajouter une photo</a>
            </div>
            {% endif %}
        </section>
    {% endfor %}
{% endblock %}


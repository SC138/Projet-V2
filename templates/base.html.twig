<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <title>Tattoo Shop</title>

    <link rel="stylesheet" href="{{ asset('assets/style.css') }}">
</head>

{% block header %}
    <header class="js-body">
        <div id="main">
            <div class="burger">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <nav class="nav-bar">
                <ul class="ul-nav">
                    <li><a class="tattoo" href="{{ path('home-page') }}"><h1>Tattoo Shop</h1></a></li>
                    <li><a href="{{ path('date_user') }}">Rendez-vous</a></li>
                    <li><a href="{{ path('landing') }}">Vidéo d'accueil</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_list_admins') }}">Liste Users</a></li>
                    {% endif %}

                    {% if not app.user %}
                        <li><a href="{{ path('create_user') }}">Créer compte</a></li>
                    {% endif %}
                    <li>
                        {% if app.user %}
                            <span><a href="{{ path('profil_user') }}">Bonjour : {{ app.user.firstname }}</a> </span> <br>
                            <a href="{{ path('app_logout') }}">
                                Déconnexion</a>
                        {% else %}
                            <a href="{{ path('app_login') }}">Connexion</a>
                        {% endif %}
                    </li>
                </ul>
            </nav>
            </div>
    </header>
{% endblock %}
{% block body %}
    <body>
        {% block main %}
            <main>
            </main>
        {% endblock %}
    </body>
{% endblock %}
{% block footer %}
    <footer id="bloc-contact">
        <p class="copyright">Copyright Tattoo Shop - 2022</p>
    </footer>
{% endblock %}
<script src="{{ asset('js/main.js') }}"></script>
</html>

